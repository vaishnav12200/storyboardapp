# ===========================================
# CINECORE BACKEND ENVIRONMENT VARIABLES
# ===========================================

# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database Configuration
MONGODB_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/database_name?retryWrites=true&w=majority&appName=YourAppName

# JWT Configuration
JWT_SECRET=cinecore-jwt-secret-key-2025-super-secure
JWT_EXPIRES_IN=7d

# Admin JWT Configuration (More secure for admin panel)
ADMIN_JWT_SECRET=cinecore-admin-jwt-ultra-secure-key-2025-production
ADMIN_TOKEN_EXPIRY=24h

# Super Admin Initial Setup
SUPER_ADMIN_EMAIL=admin@yourcompany.com
SUPER_ADMIN_PASSWORD=your-secure-password

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@cinecore.com
FROM_NAME=CineCore Platform

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=cinecore-session-secret-ultra-secure-2025
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
AUTH_RATE_LIMIT_WINDOW=15
AUTH_RATE_LIMIT_MAX=5
ADMIN_RATE_LIMIT_WINDOW=15
ADMIN_RATE_LIMIT_MAX=3

# Security Headers
CONTENT_SECURITY_POLICY=default-src 'self';base-uri 'self';font-src 'self' https: data:;form-action 'self';frame-ancestors 'self';img-src 'self' data:;object-src 'none';script-src 'self';script-src-attr 'none';style-src 'self' https: 'unsafe-inline';upgrade-insecure-requests

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf
UPLOAD_PATH=uploads/

# AI Services Configuration
# OpenAI DALL-E (for AI image generation)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Stability AI (for advanced AI image generation)
STABILITY_AI_KEY=sk-your-stability-ai-api-key-here

# Replicate API (for Midjourney-style generation)
REPLICATE_API_KEY=r8_your-replicate-api-key-here

# Google Maps API (for location services)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here

# AWS S3 Configuration (for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-west-2
S3_BUCKET_NAME=your-s3-bucket-name

# Redis Configuration (for session storage in production)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# 2FA Configuration
TWO_FACTOR_SERVICE_NAME=CineCore Platform
TWO_FACTOR_ISSUER=CineCore

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_MONITORING=true
SENTRY_DSN=

# Feature Flags
ENABLE_2FA=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_AUDIT_LOGGING=true
ENABLE_API_RATE_LIMITING=true

# Development Only
DEBUG_MODE=true
ENABLE_CORS=true